<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fashion Palace</title>
    <%- include("./includes/template-head-part") %>   
  </head>
  <body>

  <!-- Header -->
	<%- include("./includes/template-header") %>
  
    <div class="text-center center-div" id="login">
        <div class="container w-25 py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Forgot Password</h2>
                <!-- <span><%= locals.msg ? msg : "Log in for the existing user" %></span>
                <% if(locals.logout){ %>
                    <div class="alter alert-success text-center">
                        <%= logout %>
                    </div>
                <% } %> -->
            </div>
    
            <%
                if(typeof message !== 'undefined'){
                    %>
                    <h6><%= message %></h6>
                    <%
                }
            %>
    
            <form action="/forgotPasswordOtp" method="post">
                <div class="form-group">
                    <input type="string" class="form-control" placeholder="mobile" name="mobile">
                    <br>
                </div>
                  <button type="submit" class="btn btn-success rounded-pill">Send OTP</button>
            </form>

            <div id="countdown" style="display: none;"></div>
            <a href="/resendOtp" id="resendLink" style="display: none;">Resend OTP</a>
				
        </div>
    </div>

    <%- include("./includes/template-footer-and-scripts") %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
 
    </body>
</html>