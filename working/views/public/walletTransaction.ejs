<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fashion Palace</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <%- include("./includes/template-head-part") %>
</head>

<body>
    <!-- Header -->
    <%- include("./includes/template-header") %>

        <section style="background-color: #eee;">
            <div class="container py-5">
                <div class="row">
                    <%- include("./includes/profileSide") %>

                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h4>My Wallet</h4>
                                    <section class="bg-light py-3">
                                        <div class="container">
                                            <h5>Your Wallet Balance: ₹ <%= user.wallet %>
                                            </h5>
                                        </div>
                                    </section>
                                    <br>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Sl No</th>
                                                    <th>Date</th>
                                                    <th>Amount</th>
                                                    <th>Transaction type</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% wallet.forEach(function(wallet,index) {%>
                                                    <tr>
                                                        <td>
                                                            <%=index+1%>
                                                        </td>
                                                        <td>
                                                            <%=wallet.walletTransaction.date.toLocaleString()%>
                                                            <!-- <%=wallet.wallet%> -->
                                                        </td>
                                                        <td>
                                                            ₹ <%=wallet.walletTransaction.amount%>
                                                        </td>
                                                        <td>
                                                            <%if(wallet.walletTransaction.type=="Credit"){%>
                                                                <%=wallet.walletTransaction.type%>
                                                            <%}else{%>
                                                                <%=wallet.walletTransaction.type%>
                                                            <%}%>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </section>


        <%- include("./includes/template-footer-and-scripts") %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>


</body>

</html>