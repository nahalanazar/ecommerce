<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fashion Palace</title>
    <%- include("./includes/template-head-part") %>   
  </head>
  <body>

  <!-- Header -->
	<%- include("./includes/template-header") %>

    <div class="text-center center-div" id="login">
        <div class="container w-25 py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Set New Password</h2>
            </div>
    
            <%
                if(typeof message !== 'undefined'){
                    %>
                    <h6><%= message %></h6>
                    <%
                }
            %>
    
            <form action="/setNewPassword" method="post">
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="New Password" name="newPassword" required>
                    <br>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword" required>
                    <br>
                </div>
                  <button type="submit" class="btn btn-success rounded-pill">Submit</button>
            </form>
        </div>
    </div>

    <%- include("./includes/template-footer-and-scripts") %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>