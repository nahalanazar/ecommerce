<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/public/images/icons/favicon.png"/>


    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-beta2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.4.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        .btn-back {
            margin: 1rem;
            font-size: 1rem;
            color: #ffffff; /* White text */
            background-color: #007bff; /* Blue background */
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none; /* No underline */
        }
        .card {
            border-radius: 1rem;
            border: none;
            box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }
        .card .card-body {
            padding: 3rem 4rem;
        }
        .btn-primary {
            background-color:#007bff;
        }
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>

    <title>Fashion Palace</title>
</head>
<body>
    <!-- Back button -->
    <a href="/admin/productManagement" class="btn btn-primary btn-back"><i class="bi bi-arrow-left"></i>Product Management</a>


    <!-- Main content -->
    <main class="container my-5">
        <h1 class="mb-5 text-center text-secondary">Add New Product</h1>
        <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
            <div class="card shadow-lg">
                <div class="card-body">
                    <!-- Your form groups go here -->
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="product-name">Product title</label>
                                    </div>
                                    <div>
                                        <input type="text" id="product-name" class="form-control" name="name" placeholder="Type here">
                                    </div>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="product-description">Description</label>
                                    </div>
                                    <div>
                                        <textarea class="form-control" id="product-description" name="description" rows="4" placeholder="Type here"></textarea>
                                    </div>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="product-category">Category</label>
                                    </div>
                                    <div>
                                        <select class="form-select" id="product-category" name="category">
                                            <% category.forEach(function(category) { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
            
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="product-price">Cost in INR</label>
                                    </div>
                                    <div>
                                        <input type="number" id="product-price" class="form-control" name="price" placeholder="00.0">
                                    </div>
                                </div>
                                
                                <h5 class="mt-5 mb-3 text-secondary">Product Images</h5>
                                
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="main-image">Main Image</label>
                                    </div>
                                    <div>
                                        <input class="form-control" type="file" id="main-image" name="images">
                                    </div>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="second-image">Second Image</label>
                                    </div>
                                    <div>
                                        <input class="form-control" type="file" id="second-image" name="images">
                                    </div>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <div>
                                        <label class="form-label" for="third-image">Third Image</label>
                                    </div>
                                    <div>
                                        <input class="form-control" type="file" id="third-image" name="images">
                                    </div>
                                </div>
            
                                <button type="submit" class="btn btn-primary mt-3"><i class="bi bi-box-arrow-in-up"></i> Publish Product</button>
                </div>
            </div>
        </form>
        
        <div class="text-center mt-5">
            <p class="text-danger"><%=(typeof message!=='undefined')?message:""%></p>
        </div>
    </main>

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-beta2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
